<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <File name="MainLog" fileName="${sys:user.home}/AppData/Local/Mirada Medical Ltd/WorkflowAnalytics/logs/WorkflowAnalytics-${date:yyyy-MM-dd HH-mm}.log" immediateFlush="true" append="false">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="MainLog"/>
        </Root>
    </Loggers>
</Configuration>